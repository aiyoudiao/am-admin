{
  "name": "@backend/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "clear:db": "rm -rf ./docker/mysql/data && rm -rf ./docker/mysql/logs && rm -rf ./docker/redis/data",
    "init": "pnpm run docker:base && pnpm run dev",
    "db": "pnpm exec nx run drawdb:dev",
    "dev": "pnpm exec nx run backend:start:debug",
    "build": "pnpm exec nx run backend:build",
    "e2e": "pnpm exec nx run backend-e2e:e2e",
    "pm2:dev": "pm2 start ecosystem.config.cjs --env development",
    "pm2": "pm2 start ecosystem.config.cjs --env production",
    "pm2:stop": "pm2 stop ecosystem.config.cjs",
    "pm2:monit": "pm2 monit",
    "docker:rm": "docker-compose rm",
    "docker:stop": "docker-compose stop",
    "docker:base": "docker-compose up -d am-mysql am-redis"
  },
  "private": true,
  "dependencies": {
    "axios": "^1.6.0",
    "pm2": "^5.4.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@nx/esbuild": "20.2.2",
    "@nx/eslint": "20.2.2",
    "@nx/eslint-plugin": "20.2.2",
    "@nx/jest": "20.2.2",
    "@nx/js": "20.2.2",
    "@nx/node": "20.2.2",
    "@nx/workspace": "20.2.2",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/jest": "^29.5.12",
    "@types/node": "~18.16.9",
    "esbuild": "^0.19.2",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "nx": "20.2.2",
    "prettier": "^2.6.2",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.13.0"
  }
}
